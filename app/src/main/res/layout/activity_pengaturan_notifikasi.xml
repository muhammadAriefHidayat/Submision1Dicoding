<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        tools:context="org.dicoding.submision1dicoding.PengaturanNotifikasi">


    <TextView
            android:layout_margin="8dp"
            android:id="@+id/rilisSwitchTitl"
            android:textSize="18sp"
            android:text="@string/daily_remainder"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/rilisSwitchTitl"
            android:id="@+id/rilisSwitchBtn"
            android:text="@string/ingatkan_untuk_kembali_ke_applikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Switch
            android:id="@+id/switch_btn_rilis"
            android:layout_alignTop="@+id/rilisSwitchBtn"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/RilistodayTitl"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/rilisSwitchBtn"
            android:text="@string/release_remainder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/RilistodayTitl"
            android:id="@+id/rilistoday"
            android:text="@string/subtitlrelaseremainder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Switch
            android:id="@+id/switch_btn_rilistoday"
            android:layout_alignTop="@+id/rilistoday"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>
